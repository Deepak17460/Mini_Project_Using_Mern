<%- include("../partials/base.ejs") %>

<head>
    <%- include("../partials/header.ejs") %>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/student.css">
    <title>Student Result</title>
</head>

<body class="bg-custom">

    <div class="d-flex flex-row justify-content-end p-3">
        <a class="nav-link" href="/logout">
            <button class="btn btn-dark rounded-pill">
                <i class="fas fa-sign-out-alt me-2"></i>Logout
            </button>
        </a>
    </div>

    <% var options = { year: 'numeric', month: 'long', day: 'numeric' }; %>
    <div class="student-profile py-4">
      <div class="container">
          <div class="row rounded-4" >
              <div class="col-lg-4 ">
                  <div class="card shadow-sm student-card " style="background-color: rgb(57, 134, 134);">
                      <div class="card-header bg-transparent text-center student-card-header">
                          <img class="profile_img img-fluid rounded-circle"
                              src="/img/dipu.jpg" alt="Student Profile Image">
                          <h3 class="mt-3 text-dark student-card-name"><%- viewData.student.name %></h3>
                      </div>
                      <!-- <div class="card-body student-card-body">
                          <p class="mb-0 student-info"><strong class="pr-1 text-dark">Student Id:</strong><%- viewData.student.id %>
                          </p>
                      </div> -->
                  </div>
              </div>
              <div class="col-lg-8 ">
                  <div class="card shadow-sm" style="background-color: aquamarine;">
                      <div class="card-header bg-transparent border-0">
                          <h3 class="mb-0 text-primary"><i class="fas fa-user-graduate pr-2"></i>
                            <%- viewData.student.name %> score card!</h3>
                      </div>
                      <div class="card-body pt-0">
                          <table class="table table-bordered student-table">
                              <tr>
                                  <th>Roll No</th>
                                  <!-- <td>:</td> -->
                                  <td><%- viewData.student.rollNo %></td>
                              </tr>
                              <tr>
                                  <th>Date of Birth</th>
                                  <!-- <td>:</td> -->
                                  <td><%- new Date(viewData.student.dob).toLocaleDateString("en-US", options) %>
                                  </td>
                              </tr>
                              <tr>
                                  <th>Score</th>
                                  <!-- <td>:</td> -->
                                  <td><%- viewData.student.score %></td>
                              </tr>
                          </table>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
    <%- include("../partials/base.ejs") %>
</body>
