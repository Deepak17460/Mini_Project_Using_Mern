<%- include("../partials/base.ejs") %>

<head>
    <%- include("../partials/header.ejs") %>
    <title>Login</title>

    <style>
        /* Provided styles for tabs */
        #teacher-tab-option, #student-tab-option {
            cursor: pointer;
            padding: 10px;
            margin: 5px;
            transition: background-color 0.3s, border-color 0.3s, color 0.3s;
        }

        #teacher-tab-option {
            background-color: #f2f2f2;
            color: #333;
            border: 2px solid #ccc;
            border-radius: 5px;
        }

        #student-tab-option {
            background-color: #333;
            color: #fff;
            border: 2px solid #222;
            border-radius: 5px;
        }

        #teacher-tab-option:hover, #student-tab-option:hover {
            background-color: #ddd;
        }

        /* Provided styles for tab content */
        .tab-content {
            padding: 20px;
            border-radius: 10px;
        }

        #teacher-tab {
            background-color: #f9f9f9;
            border-top-left-radius: 50px;
            border-bottom-left-radius: 50px;
        }

        #student-tab {
            background-color: #666;
            border-bottom-right-radius: 50px;
            border-top-right-radius: 50px;
        }

        /* Responsive styles */
        @media (max-width: 768px) {
            .container {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .tab-content {
                padding: 10px;
            }

            #teacher-tab-option, #student-tab-option {
                width: 100%; /* Make tabs full width on small screens */
            }
        }
    </style>
    
       
    </style>

    <script src="js/index.js" type="module" defer></script>
    
    
    <script>
        let viewData = JSON.parse('<%- JSON.stringify(viewData) %>')            
    </script>

</head>

<body style="background-color: rgb(221, 229, 229);">
                         
    <div class="container d-flex align-self-center align-items-center w-100 h-100">
        <!-- <div class="container w-75 h-80 bg-light rounded-4 align-self-center align-items-center"> -->
            <!-- <div class="d-flex">
                <div id="teacher-tab-option" class="w-50 text-center">Teacher</div>
                <div id="student-tab-option" class="w-50 text-center">Student</div>
            </div> -->
            <span id="teacher-tab" class="d-flex flex-column w-50 justify-content-center align-items-center p-5" style="background-color: hsl(0, 0%, 100%);">
                <!-- <h2 style="background-color: rgb(11, 5, 5);color: white;"> Teacher-Login</h2> -->
                <div class="d-flex">
                    <div id="teacher-tab-option" class="w-100 text-center" style="background-color: black;color: white;">Teacher</div>
                   
                </div>
                <div class="d-flex flex-column w-100">
                    <form action="" method="post">
                        <div class="mb-3">
                            <% if(viewData?.errors?.field?.email) { %>
                                <div>
                                    <span class="badge bg-danger"><%- viewData?.errors?.field?.email %> </span>
                                </div>
                            <% } %>
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" name="email" class="form-control" id="email" placeholder="" required>
                        </div>
                        <div class="mb-3">
                            <% if(viewData?.errors?.field?.password) { %>
                                <div>
                                    <span class="badge bg-danger"><%- viewData?.errors?.field?.password %> </span>
                                </div>
                            <% } %>
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="password" required>
                        </div>
                        <!-- <button type="button" id="show-password">Show Password</button> -->
                        <button class="btn btn-primary" type="submit" id="login">Login</button>
                    </form>
                </div>
                <!-- <div class="d-flex flex-column w-50 h-100 p-2">
                    <div class="align-self-center">
                        <img class="w-50" src="img/teacher-ai.png" alt="teacher login">
                    </div>
                </div> -->
            </span>
            <span id="student-tab" class="d-flex flex-column  w-50 justify-content-center align-items-center p-5" style="background-color: white;">
                <!-- <h2 style="background-color: rgb(31, 5, 5);color: white;"> Student-Login</h2> -->
                <div class="d-flex">
                    <div id="student-tab-option" class="w-100 text-center" style="background-color: black;">Student</div>
                </div>
                <div class="d-flex flex-column w-100">
                    <form action="" method="post">
                        <div class="mb-3">
                            <% if(viewData?.errors?.field?.rollNo) { %>
                                <div>
                                    <span class="badge bg-danger"><%- viewData?.errors?.field?.rollNo %> </span>
                                </div>
                            <% } %>
                            <label for="rollNo" class="form-label">Roll No</label>
                            <input type="number" name="rollNo" class="form-control" id="rollNo" placeholder="">
                        </div>
                        <div class="mb-3">
                            <% if(viewData?.errors?.field?.dob) { %>
                                <div>
                                    <span class="badge bg-danger"><%- viewData?.errors?.field?.dob %> </span>
                                </div>
                            <% } %>
                            <label for="dob" class="form-label">DOB</label>
                            <input type="date" name="dob" class="form-control" id="dob">
                        </div>
                        <button class="btn btn-primary" type="submit" id="search">View</button>
                    </form>
                </div>
                <!-- <div class="d-flex flex-column w-50 h-100 p-2">
                    <div class="align-self-center">
                        <img class="w-50" src="img/student-ai.png" alt="student login">
                    </div>
                </div> -->
            </span>
        <!-- </div> -->
    
    </div>
    
    </body>

