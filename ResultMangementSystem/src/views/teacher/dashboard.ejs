<%- include("../partials/base.ejs") %>

<head>
    <%- include("../partials/header.ejs") %>
    <title>Teacher Dashboard</title>

</head>

<body style="background-color: rgb(180, 141, 164); text-align: center; font-family: Arial, sans-serif; padding: 0px;">
    <%- include("../partials/teachernavBar.ejs") %>
    <% var options = { year: 'numeric', month: 'long', day: 'numeric' }; %>

      <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                  <th scope="col">Serial No</th>
                  <th scope="col">Roll No</th>
                  <th scope="col">Name</th>
                  <th scope="col">DOB</th>
                  <th scope="col">Score</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>

                <% let i = 1; viewData.students.forEach(item => { %>
                    <tr>
                        <th scope="row"> <%- i++ %>  </th>
                        <td> <%- item.rollNo %> </td>
                        <td> <%- item.name %> </td>
                        <td> <%- new Date(item.dob).toLocaleDateString("en-US", options) %> </td>
                        <td> <%- item.score %> </td>
                        <td> 
                          <form action="/teacher/dashboard/student/<%- item.id %>/edit" method="get">
                            <button class="btn btn-dark rounded-pill"><i class="fa-regular fa-pen-to-square"></i></button>
                          </form>
                            <form action="/teacher/student/<%- item.id %>/delete" method="get">
                              <button class="btn btn-danger rounded-pill"><i class="fa-solid fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
              </tbody>
        </table>
      </div>
</body>

<%- include("../partials/base.ejs") %>